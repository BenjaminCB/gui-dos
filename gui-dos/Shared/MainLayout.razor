@inherits LayoutComponentBase

<MudThemeProvider Theme="BrandTheme"/>

<MudLayout>
    <MudAppBar Class="mud-primary">
        <BrandLogoButton/>
        <MudSpacer/>
        <NavMenu/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Primary" Icon="@Icons.Filled.ArrowCircleUp" />
    </MudScrollToTop>
</MudLayout>

@code 
{
    MudTheme BrandTheme = new MudTheme() 
    {
        Palette = new Palette() 
        {
            Primary = "rgb(48, 157, 155)",
            Secondary = "rgb(149, 224, 229)",
            Tertiary = "rgb(255, 255, 255)",
        },
        LayoutProperties = new LayoutProperties() 
        {
            AppbarHeight = "2cm"
        }
    };
}