@inherits LayoutComponentBase

<MudThemeProvider Theme="BrandTheme"/>

<MudLayout>
    <MudAppBar Class="mud-primary">
        <BrandLogoButton/>
        <MudSpacer/>
        <NavMenu/>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Outlined.ShoppingCart" Color="Color.Tertiary" OnClick="ToggleCart"/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_cartOpen" Anchor="Anchor.Right" ClipMode="DrawerClipMode.Docked">
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code 
{
    bool _cartOpen = false;
    void ToggleCart() {
        _cartOpen = !_cartOpen;
    }

    // MudBlazor theme customizations
    MudTheme BrandTheme = new MudTheme() 
    {
        Palette = new Palette() 
        {
            Primary = "rgb(48, 157, 155)",
            Secondary = "rgb(149, 224, 229)",
            Tertiary = "rgb(255, 255, 255)",
        },
        LayoutProperties = new LayoutProperties() 
        {
            AppbarHeight = "2cm"
        }
    };
}