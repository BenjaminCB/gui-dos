@inherits LayoutComponentBase
@inject ShoppingCart ShoppingCart

<MudThemeProvider Theme="BrandTheme"/>
<MudDialogProvider/>

<MudLayout>
    @* Navigation menu in the top of every page*@
    <MudAppBar Elevation="10" Color="Color.Primary">
        <BrandLogoButton/>
        <MudSpacer/>
        <MainLayoutNavMenu/>
    </MudAppBar>

    @* Page content *@
    <MudMainContent Style="min-height:100vh;">
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>

    @* Page footer *@
    <MainLayoutFooter/>
</MudLayout>

@code
{
    // MudBlazor theme customizations
    MudTheme BrandTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "rgb(48, 157, 155)",
            Secondary = "rgb(151, 224, 230)",
            Tertiary = "rgb(255, 255, 255)",
        },
        LayoutProperties = new LayoutProperties()
        {
            AppbarHeight = "2cm",
        }

        @* Uncomment to change font to calibri ,
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Calibri, sans-serif" }
            }
        }*@

    };
}
