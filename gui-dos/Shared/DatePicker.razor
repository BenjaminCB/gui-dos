<div>
    <div style="text-align: center;">
        <input type="date" @bind-value="res" min="@DateTime.Now.Year-@DateTime.Now.Month-@DateTime.Now.Day" style="font-size: large;"/>
    </div>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Medium" @onclick="ModalInstance.CancelAsync" style="float: left">Cancel</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Color="Color.Info" Size="Size.Medium" @onclick="Confirm" style="float: right;">Save</MudButton>
</div>
@code{

    DateTime res = DateTime.Now;
    // Can add a upper limit, but since it is shop-side that would just be a unnecesseary limit

    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    void Confirm()
    {
        string t = res.ToString();
        ModalInstance.CloseAsync(ModalResult.Ok(t));
    }
}