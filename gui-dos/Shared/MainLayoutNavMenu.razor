<MudMenu AnchorOrigin="Origin.TopCenter" TransformOrigin="Origin.TopCenter" ActivationEvent="MouseEvent.MouseOver">
    <ActivatorContent>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large"
         EndIcon="fas fa-bars" IconColor="Color.Tertiary" Class="border border-dark">
            Menu
        </MudButton>
    </ActivatorContent>
    <ChildContent>
        <MudPaper Elevation="0">
            <MudText Align="Align.Center" Typo="Typo.h6">Menu</MudText>
            <MudDivider Class="my-2"/>
            <MudNavLink Match="NavLinkMatch.All" Href="" Icon="fas fa-home">
                Forside
            </MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="shop" Icon="fas fa-gifts">
                Webshop
            </MudNavLink>
            <AuthorizeView>
                <Authorized>
                    <MudDivider Class="my-2"/>
                    <MudNavLink Match="NavLinkMatch.All" Href="product" Icon="fas fa-box-open">
                        Produkter
                    </MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Href="order" Icon="fas fa-file-alt">
                        Ordre
                    </MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Href="order/history" Icon="fas fa-history">
                        Ordrehistorik
                    </MudNavLink>
                    <MudDivider Class="my-2"/>
                </Authorized>
            </AuthorizeView>
        </MudPaper>
    </ChildContent>
</MudMenu>
