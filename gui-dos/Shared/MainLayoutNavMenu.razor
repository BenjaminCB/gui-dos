<MudMenu AnchorOrigin="Origin.TopRight" TransformOrigin="Origin.TopRight" ActivationEvent="MouseEvent.MouseOver">
    <ActivatorContent>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large"
         EndIcon="fas fa-bars" IconColor="Color.Tertiary" Class="border border-dark">
            Menu
        </MudButton>
    </ActivatorContent>
    <ChildContent>
        <MudPaper Elevation="0" MinWidth="10vw">
            @* Visible for all users *@
            <MudText Align="Align.Center" Typo="Typo.h6">Menu</MudText>
            <MudNavLink Match="NavLinkMatch.All" Href="" Icon="fas fa-home">
                Forside
            </MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="shop" Icon="fas fa-gifts">
                Webshop
            </MudNavLink>
            @* Visible for registered users *@
            <AuthorizeView>
                <Authorized>
                    <MudText Align="Align.Center" Typo="Typo.h6">Administrer</MudText>
                    <MudNavLink Match="NavLinkMatch.All" Href="product" Icon="fas fa-boxes">
                        Produkter
                    </MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Href="order" Icon="fas fa-list-alt">
                        Ordre
                    </MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Href="order/history" Icon="fas fa-history">
                        Ordrehistorik
                    </MudNavLink>
                </Authorized>
            </AuthorizeView>
            @* Visible for admin of page *@
            <AuthorizeView Roles="superuser">
                <Authorized>
                    <MudNavLink Match="NavLinkMatch.All" Href="admin/users" Icon="fas fa-users">
                        Medarbejdere
                    </MudNavLink>
                </Authorized>
            </AuthorizeView>
            <LoginDisplay/>
        </MudPaper>
    </ChildContent>
</MudMenu>
